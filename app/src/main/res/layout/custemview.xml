<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:cardCornerRadius="10dp"
        android:layout_margin="12dp"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cusimgs"
                android:layout_width="210dp"
                android:layout_height="177dp"
                android:src="@drawable/comming_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/cuscity"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="100dp"
                android:text="Coeurdes Alpes "
                android:textColor="#232323"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cusimgs"/>
            <TextView
                android:id="@+id/cusviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23Reviews"
                app:layout_constraintTop_toBottomOf="@id/cuscity"
                android:layout_marginStart="45dp"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/cusimgs"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>